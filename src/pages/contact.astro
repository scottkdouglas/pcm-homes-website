---
import BaseLayout from '../layouts/BaseLayout.astro';
---

<BaseLayout title="Contact Us" description="Get in touch with PCM Homes for a free quote. Call (905) 716-1939 or email info.pcmhomes@gmail.com.">
  <!-- Hero Section -->
  <section class="pt-32 pb-16 bg-[var(--color-cream)]">
    <div class="max-w-4xl mx-auto px-6 lg:px-8 text-center">
      <p class="section-label mb-4">Get In Touch</p>
      <h1 class="text-5xl md:text-7xl font-display font-medium mb-6 text-[var(--color-charcoal)]">
        Start Your <span class="italic">Project</span>
      </h1>
      <p class="text-xl text-[var(--color-slate)] max-w-2xl mx-auto">
        Let's discuss your vision and bring your dream home to life.
      </p>
    </div>
  </section>

  <!-- Contact Section -->
  <section class="py-16 md:py-24 bg-[var(--color-cream)]">
    <div class="max-w-7xl mx-auto px-6 lg:px-8">
      <div class="grid grid-cols-1 lg:grid-cols-5 gap-16">
        <!-- Contact Form -->
        <div class="lg:col-span-3">
          <div class="bg-white p-8 md:p-12">
            <h2 class="text-3xl font-display text-[var(--color-charcoal)] mb-2">Request a Free Quote</h2>
            <p class="text-[var(--color-slate)] mb-8">Fill out the form below and we'll get back to you within 24 hours.</p>

            <form id="contact-form" class="space-y-6">
              <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                <!-- Name -->
                <div>
                  <label for="name" class="block text-sm font-medium text-[var(--color-charcoal)] mb-2">Your Name *</label>
                  <input
                    type="text"
                    id="name"
                    name="name"
                    required
                    class="form-input"
                    placeholder="John Smith"
                  >
                </div>

                <!-- Phone -->
                <div>
                  <label for="phone" class="block text-sm font-medium text-[var(--color-charcoal)] mb-2">Phone Number *</label>
                  <input
                    type="tel"
                    id="phone"
                    name="phone"
                    required
                    class="form-input"
                    placeholder="(905) 555-1234"
                  >
                </div>
              </div>

              <!-- Email -->
              <div>
                <label for="email" class="block text-sm font-medium text-[var(--color-charcoal)] mb-2">Email Address *</label>
                <input
                  type="email"
                  id="email"
                  name="email"
                  required
                  class="form-input"
                  placeholder="john@example.com"
                >
              </div>

              <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                <!-- Service Type -->
                <div>
                  <label for="service" class="block text-sm font-medium text-[var(--color-charcoal)] mb-2">Service Needed *</label>
                  <select
                    id="service"
                    name="service"
                    required
                    class="form-input"
                  >
                    <option value="">Select a service...</option>
                    <option value="custom-home">Custom Home</option>
                    <option value="cottage">Cottage / A-Frame Cabin</option>
                    <option value="icf-framing">ICF & Framing</option>
                    <option value="renovation">Renovation</option>
                    <option value="addition">Addition</option>
                    <option value="other">Other / Not Sure</option>
                  </select>
                </div>

                <!-- Location -->
                <div>
                  <label for="location" class="block text-sm font-medium text-[var(--color-charcoal)] mb-2">Project Location *</label>
                  <select
                    id="location"
                    name="location"
                    required
                    class="form-input"
                  >
                    <option value="">Select a location...</option>
                    <option value="muskoka">Muskoka Lakes</option>
                    <option value="kawartha">Kawartha Lakes</option>
                    <option value="durham">Durham Region</option>
                    <option value="york">York Region</option>
                    <option value="gta">GTA</option>
                    <option value="other">Other Ontario Location</option>
                  </select>
                </div>
              </div>

              <!-- Message -->
              <div>
                <label for="message" class="block text-sm font-medium text-[var(--color-charcoal)] mb-2">Project Details *</label>
                <textarea
                  id="message"
                  name="message"
                  rows="5"
                  required
                  class="form-input resize-none"
                  placeholder="Tell us about your project, timeline, and any specific requirements..."
                ></textarea>
              </div>

              <!-- Timeline -->
              <div>
                <label for="timeline" class="block text-sm font-medium text-[var(--color-charcoal)] mb-2">Desired Timeline</label>
                <select
                  id="timeline"
                  name="timeline"
                  class="form-input"
                >
                  <option value="">Select timeline...</option>
                  <option value="asap">ASAP / Emergency</option>
                  <option value="1-3months">1-3 Months</option>
                  <option value="3-6months">3-6 Months</option>
                  <option value="6-12months">6-12 Months</option>
                  <option value="12+months">12+ Months</option>
                  <option value="flexible">Flexible</option>
                </select>
              </div>

              <!-- Submit Button -->
              <button
                type="submit"
                class="w-full btn-primary py-4"
              >
                <span>Send Quote Request</span>
              </button>

              <p class="text-sm text-[var(--color-stone)] text-center">
                * Required fields. We respond within 24 hours.
              </p>
            </form>

            <div id="form-message" class="mt-6 hidden"></div>
          </div>
        </div>

        <!-- Contact Information -->
        <div class="lg:col-span-2 space-y-8">
          <!-- Direct Contact Card -->
          <div class="bg-[var(--color-charcoal)] text-white p-8">
            <h3 class="text-2xl font-display mb-8">Contact Information</h3>

            <div class="space-y-6">
              <a href="tel:9057161939" class="flex items-start gap-4 group">
                <div class="w-12 h-12 border border-white/20 flex items-center justify-center flex-shrink-0 group-hover:border-[var(--color-timber)] transition-colors">
                  <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path>
                  </svg>
                </div>
                <div>
                  <p class="text-white/60 text-sm mb-1">Phone</p>
                  <p class="text-lg group-hover:text-[var(--color-timber)] transition-colors">(905) 716-1939</p>
                  <p class="text-white/40 text-sm mt-1">Available for calls and texts</p>
                </div>
              </a>

              <a href="mailto:info.pcmhomes@gmail.com" class="flex items-start gap-4 group">
                <div class="w-12 h-12 border border-white/20 flex items-center justify-center flex-shrink-0 group-hover:border-[var(--color-timber)] transition-colors">
                  <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
                  </svg>
                </div>
                <div>
                  <p class="text-white/60 text-sm mb-1">Email</p>
                  <p class="text-lg group-hover:text-[var(--color-timber)] transition-colors break-all">info.pcmhomes@gmail.com</p>
                  <p class="text-white/40 text-sm mt-1">For estimates and quotes</p>
                </div>
              </a>

              <div class="flex items-start gap-4">
                <div class="w-12 h-12 border border-white/20 flex items-center justify-center flex-shrink-0">
                  <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                  </svg>
                </div>
                <div>
                  <p class="text-white/60 text-sm mb-1">Business Hours</p>
                  <p class="text-lg">Monday - Friday</p>
                  <p class="text-lg">8:00 AM - 6:00 PM</p>
                  <p class="text-white/40 text-sm mt-1">Dan or Anita answers</p>
                </div>
              </div>
            </div>
          </div>

          <!-- Response Times -->
          <div class="bg-white p-8">
            <h3 class="text-xl font-display text-[var(--color-charcoal)] mb-6">Quote Response Times</h3>
            <div class="space-y-4">
              {[
                { time: '2-3 days', project: 'Small Renovations' },
                { time: '1-2 weeks', project: 'Custom Builds & Major Renovations' },
                { time: 'Same day', project: 'Emergency Work' },
              ].map((item) => (
                <div class="flex items-center gap-4">
                  <div class="w-16 h-16 bg-[var(--color-timber-light)]/30 flex items-center justify-center flex-shrink-0">
                    <span class="text-sm font-medium text-[var(--color-charcoal)]">{item.time}</span>
                  </div>
                  <div>
                    <p class="font-medium text-[var(--color-charcoal)]">{item.project}</p>
                  </div>
                </div>
              ))}
            </div>
          </div>

          <!-- Availability Notice -->
          <div class="bg-[var(--color-timber-light)]/30 p-6">
            <h4 class="font-display text-lg text-[var(--color-charcoal)] mb-2">Current Availability</h4>
            <p class="text-[var(--color-slate)]">
              We're currently booking <strong>4-6 months</strong> out for new projects. Contact us today to reserve your spot.
            </p>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Contact Methods -->
  <section class="py-24 bg-white">
    <div class="max-w-6xl mx-auto px-6 lg:px-8">
      <div class="text-center mb-16">
        <p class="section-label mb-4">Reach Out</p>
        <h2 class="text-4xl font-display text-[var(--color-charcoal)] mb-6">
          How to <span class="italic">Contact Us</span>
        </h2>
        <div class="divider divider-center"></div>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
        {[
          { title: 'Call or Text', desc: 'Quick questions? Give us a call or send a text', action: '(905) 716-1939', href: 'tel:9057161939', icon: 'M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z' },
          { title: 'Email', desc: 'Send us detailed project information', action: 'info.pcmhomes@gmail.com', href: 'mailto:info.pcmhomes@gmail.com', icon: 'M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z' },
          { title: 'Request Quote', desc: 'Fill out our form for a detailed response', action: 'Form Above', href: '#contact-form', icon: 'M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z' },
        ].map((method) => (
          <a href={method.href} class="card p-8 text-center hover-lift group">
            <div class="w-16 h-16 mx-auto mb-6 border border-[var(--color-timber)] flex items-center justify-center group-hover:bg-[var(--color-timber)] transition-colors">
              <svg class="w-7 h-7 text-[var(--color-timber)] group-hover:text-white transition-colors" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d={method.icon}></path>
              </svg>
            </div>
            <h3 class="text-xl font-display text-[var(--color-charcoal)] mb-2">{method.title}</h3>
            <p class="text-[var(--color-slate)] mb-4">{method.desc}</p>
            <span class="text-[var(--color-timber)] font-medium">{method.action}</span>
          </a>
        ))}
      </div>
    </div>
  </section>

  <script>
    const form = document.getElementById('contact-form') as HTMLFormElement;
    const formMessage = document.getElementById('form-message') as HTMLDivElement;

    form?.addEventListener('submit', async (e) => {
      e.preventDefault();

      const submitBtn = form.querySelector('button[type="submit"]') as HTMLButtonElement;
      const originalHTML = submitBtn.innerHTML;
      submitBtn.innerHTML = '<span>Sending...</span>';
      submitBtn.disabled = true;

      try {
        const formData = new FormData(form);
        const response = await fetch('https://formspree.io/f/mlgllpnk', {
          method: 'POST',
          body: formData,
          headers: {
            'Accept': 'application/json'
          }
        });

        if (response.ok) {
          formMessage.className = 'mt-6 p-6 bg-[var(--color-timber-light)]/30 text-[var(--color-charcoal)]';
          formMessage.innerHTML = '<strong>Thank you!</strong> We\'ve received your message and will respond within 24 hours.';
          formMessage.classList.remove('hidden');
          form.reset();
        } else {
          throw new Error('Form submission failed');
        }
      } catch (error) {
        formMessage.className = 'mt-6 p-6 bg-red-100 text-red-800';
        formMessage.innerHTML = '<strong>Something went wrong.</strong> Please try again or call us at (905) 716-1939.';
        formMessage.classList.remove('hidden');
      } finally {
        submitBtn.innerHTML = originalHTML;
        submitBtn.disabled = false;
        formMessage.scrollIntoView({ behavior: 'smooth', block: 'nearest' });
      }
    });
  </script>
</BaseLayout>
