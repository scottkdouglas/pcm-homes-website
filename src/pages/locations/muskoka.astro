  <!-- Project Gallery Preview -->
  <section class="py-24 md:py-32 bg-white">
    <div class="max-w-7xl mx-auto px-6 lg:px-8">
      <div class="text-center mb-16">
        <p class="section-label mb-4">Our Work</p>
        <h2 class="text-4xl md:text-5xl font-display text-[var(--color-charcoal)] mb-6">
          Muskoka <span class="italic">Projects</span>
        </h2>
        <div class="divider divider-center"></div>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
        <div class="img-zoom relative group lg:col-span-2 lg:row-span-2">
          <img
