---
import '../styles/global.css';

interface Props {
  title: string;
  description?: string;
}

const { title, description = "PCM Homes - Custom Home Builder & Renovation Contractor serving Muskoka, Kawartha, Durham, York Region and GTA" } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta name="description" content={description}>
  <title>{title} | PCM Homes</title>
  <link rel="icon" type="image/png" href="/favicon.png" media="(prefers-color-scheme: light)">
  <link rel="icon" type="image/png" href="/favicon-dark.png" media="(prefers-color-scheme: dark)">
</head>
<body class="min-h-screen flex flex-col">
  <!-- Scroll Progress Bar -->
  <div id="scroll-progress" class="scroll-progress" style="transform: scaleX(0);"></div>

  <!-- Header -->
  <header id="site-header" class="fixed top-0 left-0 right-0 z-50 transition-all duration-500">
    <div class="absolute inset-0 bg-white/0 backdrop-blur-none transition-all duration-500" id="header-bg"></div>
    <nav class="relative max-w-7xl mx-auto px-6 lg:px-8">
      <div class="flex justify-between items-center h-24">
        <!-- Logo -->
        <a href="/" class="relative z-10 group">
          <img
            src="/images/logo.png"
            alt="PCM Homes"
            class="h-12 w-auto transition-all duration-300"
            id="header-logo"
          />
        </a>

        <!-- Desktop Navigation -->
        <div class="hidden md:flex items-center gap-10" id="nav-links">
          <a href="/" class="nav-link text-sm font-medium tracking-wide uppercase relative group">
            Home
            <span class="absolute -bottom-1 left-0 w-0 h-px bg-[var(--color-timber)] group-hover:w-full transition-all duration-300"></span>
          </a>
          <a href="/services" class="nav-link text-sm font-medium tracking-wide uppercase relative group">
            Services
            <span class="absolute -bottom-1 left-0 w-0 h-px bg-[var(--color-timber)] group-hover:w-full transition-all duration-300"></span>
          </a>
          <a href="/locations" class="nav-link text-sm font-medium tracking-wide uppercase relative group">
            Locations
            <span class="absolute -bottom-1 left-0 w-0 h-px bg-[var(--color-timber)] group-hover:w-full transition-all duration-300"></span>
          </a>
          <a href="/about" class="nav-link text-sm font-medium tracking-wide uppercase relative group">
            About
            <span class="absolute -bottom-1 left-0 w-0 h-px bg-[var(--color-timber)] group-hover:w-full transition-all duration-300"></span>
          </a>
          <a href="/contact" class="nav-link ml-4 px-6 py-3 bg-[var(--color-charcoal)] text-white text-sm font-medium tracking-wide uppercase hover:bg-[var(--color-timber)] transition-colors duration-300">
            Get Quote
          </a>
        </div>

        <!-- Mobile Menu Button -->
        <button id="mobile-menu-button" class="md:hidden relative z-10 p-2 -mr-2" aria-label="Toggle menu">
          <div class="w-6 h-5 relative flex flex-col justify-between" id="hamburger">
            <span class="w-full h-px bg-current transition-all duration-300 origin-left" id="line1"></span>
            <span class="w-full h-px bg-current transition-all duration-300" id="line2"></span>
            <span class="w-full h-px bg-current transition-all duration-300 origin-left" id="line3"></span>
          </div>
        </button>
      </div>

      <!-- Mobile Navigation -->
      <div id="mobile-menu" class="hidden md:hidden absolute top-full left-0 right-0 bg-white shadow-lg">
        <div class="flex flex-col py-6 px-6 mobile-menu-enter">
          <a href="/" class="py-3 text-[var(--color-charcoal)] font-medium tracking-wide uppercase border-b border-gray-100">Home</a>
          <a href="/services" class="py-3 text-[var(--color-charcoal)] font-medium tracking-wide uppercase border-b border-gray-100">Services</a>
          <a href="/locations" class="py-3 text-[var(--color-charcoal)] font-medium tracking-wide uppercase border-b border-gray-100">Locations</a>
          <a href="/about" class="py-3 text-[var(--color-charcoal)] font-medium tracking-wide uppercase border-b border-gray-100">About</a>
          <a href="/contact" class="mt-4 py-4 bg-[var(--color-charcoal)] text-white text-center font-medium tracking-wide uppercase">Get Quote</a>
          <div class="mt-6 pt-6 border-t border-gray-100">
            <a href="tel:9057161939" class="flex items-center gap-3 text-[var(--color-slate)]">
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path>
              </svg>
              (905) 716-1939
            </a>
          </div>
        </div>
      </div>
    </nav>
  </header>

  <!-- Main Content -->
  <main class="flex-grow">
    <slot />
  </main>

  <!-- Footer -->
  <footer class="bg-[var(--color-charcoal)] text-white">
    <!-- Main Footer -->
    <div class="max-w-7xl mx-auto px-6 lg:px-8 py-20">
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-12 lg:gap-8">
        <!-- Brand Column -->
        <div class="lg:col-span-1">
          <div class="mb-6">
            <img
              src="/images/logo.png"
              alt="PCM Homes"
              class="h-14 w-auto brightness-0 invert"
            />
          </div>
          <p class="text-white/60 text-sm leading-relaxed mb-6">
            Custom home building and renovation excellence throughout Ontario. 9 years of craftsmanship and communication you can trust.
          </p>
          <div class="flex gap-4">
            <a href="#" class="w-10 h-10 border border-white/20 flex items-center justify-center hover:border-[var(--color-timber)] hover:text-[var(--color-timber)] transition-colors">
              <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24">
                <path d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069zm0-2.163c-3.259 0-3.667.014-4.947.072-4.358.2-6.78 2.618-6.98 6.98-.059 1.281-.073 1.689-.073 4.948 0 3.259.014 3.668.072 4.948.2 4.358 2.618 6.78 6.98 6.98 1.281.058 1.689.072 4.948.072 3.259 0 3.668-.014 4.948-.072 4.354-.2 6.782-2.618 6.979-6.98.059-1.28.073-1.689.073-4.948 0-3.259-.014-3.667-.072-4.947-.196-4.354-2.617-6.78-6.979-6.98-1.281-.059-1.69-.073-4.949-.073zm0 5.838c-3.403 0-6.162 2.759-6.162 6.162s2.759 6.163 6.162 6.163 6.162-2.759 6.162-6.163c0-3.403-2.759-6.162-6.162-6.162zm0 10.162c-2.209 0-4-1.79-4-4 0-2.209 1.791-4 4-4s4 1.791 4 4c0 2.21-1.791 4-4 4zm6.406-11.845c-.796 0-1.441.645-1.441 1.44s.645 1.44 1.441 1.44c.795 0 1.439-.645 1.439-1.44s-.644-1.44-1.439-1.44z"/>
              </svg>
            </a>
          </div>
        </div>

        <!-- Services Column -->
        <div>
          <h4 class="text-xs font-semibold tracking-[0.2em] uppercase mb-6 text-white/40">Services</h4>
          <ul class="space-y-3">
            <li><a href="/services#custom-homes" class="text-white/70 hover:text-[var(--color-timber)] transition-colors text-sm">Custom Homes</a></li>
            <li><a href="/services#cottages" class="text-white/70 hover:text-[var(--color-timber)] transition-colors text-sm">Cottages & Cabins</a></li>
            <li><a href="/services#icf-framing" class="text-white/70 hover:text-[var(--color-timber)] transition-colors text-sm">ICF & Framing</a></li>
            <li><a href="/services#renovations" class="text-white/70 hover:text-[var(--color-timber)] transition-colors text-sm">Renovations</a></li>
          </ul>
        </div>

        <!-- Locations Column -->
        <div>
          <h4 class="text-xs font-semibold tracking-[0.2em] uppercase mb-6 text-white/40">Service Areas</h4>
          <ul class="space-y-3">
            <li><a href="/locations" class="text-white/70 hover:text-[var(--color-timber)] transition-colors text-sm">Muskoka Lakes</a></li>
            <li><a href="/locations" class="text-white/70 hover:text-[var(--color-timber)] transition-colors text-sm">Kawartha Lakes</a></li>
            <li><a href="/locations" class="text-white/70 hover:text-[var(--color-timber)] transition-colors text-sm">Durham Region</a></li>
            <li><a href="/locations" class="text-white/70 hover:text-[var(--color-timber)] transition-colors text-sm">York Region</a></li>
            <li><a href="/locations" class="text-white/70 hover:text-[var(--color-timber)] transition-colors text-sm">Greater Toronto Area</a></li>
          </ul>
        </div>

        <!-- Contact Column -->
        <div>
          <h4 class="text-xs font-semibold tracking-[0.2em] uppercase mb-6 text-white/40">Contact</h4>
          <ul class="space-y-4">
            <li>
              <a href="tel:9057161939" class="flex items-center gap-3 text-white/70 hover:text-[var(--color-timber)] transition-colors text-sm">
                <svg class="w-4 h-4 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path>
                </svg>
                (905) 716-1939
              </a>
            </li>
            <li>
              <a href="mailto:info.pcmhomes@gmail.com" class="flex items-center gap-3 text-white/70 hover:text-[var(--color-timber)] transition-colors text-sm">
                <svg class="w-4 h-4 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
                </svg>
                info.pcmhomes@gmail.com
              </a>
            </li>
            <li class="flex items-center gap-3 text-white/70 text-sm">
              <svg class="w-4 h-4 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
              </svg>
              Mon-Fri: 8am - 6pm
            </li>
          </ul>
        </div>
      </div>
    </div>

    <!-- Bottom Bar -->
    <div class="border-t border-white/10">
      <div class="max-w-7xl mx-auto px-6 lg:px-8 py-6">
        <div class="flex flex-col md:flex-row justify-between items-center gap-4">
          <p class="text-white/40 text-sm">
            &copy; {new Date().getFullYear()} PCM Homes. All rights reserved.
          </p>
          <div class="flex items-center gap-6 text-white/40 text-sm">
            <span>Fully Insured</span>
            <span class="w-1 h-1 rounded-full bg-white/20"></span>
            <span>2-Year Warranty</span>
            <span class="w-1 h-1 rounded-full bg-white/20"></span>
            <span>9 Years Excellence</span>
          </div>
        </div>
      </div>
    </div>
  </footer>

  <script>
    // Header scroll behavior
    const header = document.getElementById('site-header');
    const headerBg = document.getElementById('header-bg');
    const headerLogo = document.getElementById('header-logo');
    const navLinks = document.querySelectorAll('.nav-link');
    const hamburger = document.getElementById('hamburger');

    let lastScroll = 0;
    let isScrolled = false;

    function setDarkMode() {
      // White logo and text for dark backgrounds
      headerLogo?.classList.add('brightness-0', 'invert');
      navLinks.forEach(link => {
        link.classList.remove('text-[var(--color-charcoal)]');
        link.classList.add('text-white');
      });
      hamburger?.classList.remove('text-[var(--color-charcoal)]');
      hamburger?.classList.add('text-white');
    }

    function setLightMode() {
      // Normal logo and dark text for light backgrounds
      headerLogo?.classList.remove('brightness-0', 'invert');
      navLinks.forEach(link => {
        link.classList.add('text-[var(--color-charcoal)]');
        link.classList.remove('text-white');
      });
      hamburger?.classList.add('text-[var(--color-charcoal)]');
      hamburger?.classList.remove('text-white');
    }

    function updateHeader() {
      const currentScroll = window.scrollY;

      if (currentScroll > 100 && !isScrolled) {
        isScrolled = true;
        headerBg?.classList.remove('bg-white/0', 'backdrop-blur-none');
        headerBg?.classList.add('bg-white/95', 'backdrop-blur-md');
        setLightMode();
      } else if (currentScroll <= 100 && isScrolled) {
        isScrolled = false;
        headerBg?.classList.add('bg-white/0', 'backdrop-blur-none');
        headerBg?.classList.remove('bg-white/95', 'backdrop-blur-md');

        // Check if we're on a page with a dark hero
        const heroSection = document.querySelector('[data-hero="dark"]');
        if (heroSection) {
          setDarkMode();
        }
      }

      lastScroll = currentScroll;
    }

    // Initial setup based on hero type
    const heroSection = document.querySelector('[data-hero="dark"]');
    if (heroSection && window.scrollY <= 100) {
      setDarkMode();
    } else {
      setLightMode();
    }

    window.addEventListener('scroll', updateHeader);

    // Scroll progress bar
    const scrollProgress = document.getElementById('scroll-progress');

    function updateScrollProgress() {
      const scrollTop = window.scrollY;
      const docHeight = document.documentElement.scrollHeight - window.innerHeight;
      const scrollPercent = scrollTop / docHeight;
      if (scrollProgress) {
        scrollProgress.style.transform = `scaleX(${scrollPercent})`;
      }
    }

    window.addEventListener('scroll', updateScrollProgress);

    // Mobile menu toggle
    const mobileMenuButton = document.getElementById('mobile-menu-button');
    const mobileMenu = document.getElementById('mobile-menu');
    const line1 = document.getElementById('line1');
    const line2 = document.getElementById('line2');
    const line3 = document.getElementById('line3');
    let menuOpen = false;

    mobileMenuButton?.addEventListener('click', () => {
      menuOpen = !menuOpen;
      mobileMenu?.classList.toggle('hidden');

      if (menuOpen) {
        line1?.classList.add('rotate-45', 'translate-y-2');
        line2?.classList.add('opacity-0');
        line3?.classList.add('-rotate-45', '-translate-y-2');
      } else {
        line1?.classList.remove('rotate-45', 'translate-y-2');
        line2?.classList.remove('opacity-0');
        line3?.classList.remove('-rotate-45', '-translate-y-2');
      }
    });
  </script>
</body>
</html>
