---
import '../styles/global.css';

interface Props {
  title: string;
  description?: string;
}

const { title, description = "PCM Homes - Custom Home Builder & Renovation Contractor serving Muskoka, Kawartha, Durham, York Region and GTA" } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta name="description" content={description}>
  <title>{title} | PCM Homes</title>
  <link rel="icon" type="image/svg+xml" href="/favicon.svg">
</head>
<body class="min-h-screen flex flex-col bg-gray-50">
  <!-- Header -->
  <header class="bg-white shadow-sm sticky top-0 z-50">
    <nav class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="flex justify-between items-center h-20">
        <!-- Logo -->
        <div class="flex-shrink-0">
          <a href="/" class="text-2xl font-bold text-gray-900">
            PCM <span class="text-blue-600">Homes</span>
          </a>
        </div>

        <!-- Desktop Navigation -->
        <div class="hidden md:flex space-x-8">
          <a href="/" class="text-gray-700 hover:text-blue-600 transition-colors font-medium">Home</a>
          <a href="/services" class="text-gray-700 hover:text-blue-600 transition-colors font-medium">Services</a>
          <a href="/locations" class="text-gray-700 hover:text-blue-600 transition-colors font-medium">Locations</a>
          <a href="/about" class="text-gray-700 hover:text-blue-600 transition-colors font-medium">About</a>
          <a href="/contact" class="text-gray-700 hover:text-blue-600 transition-colors font-medium">Contact</a>
        </div>

        <!-- Mobile Menu Button -->
        <button id="mobile-menu-button" class="md:hidden p-2 rounded-md text-gray-700 hover:bg-gray-100">
          <svg class="h-6 w-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
          </svg>
        </button>
      </div>

      <!-- Mobile Navigation -->
      <div id="mobile-menu" class="hidden md:hidden pb-4">
        <div class="flex flex-col space-y-2">
          <a href="/" class="text-gray-700 hover:text-blue-600 hover:bg-gray-50 px-3 py-2 rounded-md transition-colors font-medium">Home</a>
          <a href="/services" class="text-gray-700 hover:text-blue-600 hover:bg-gray-50 px-3 py-2 rounded-md transition-colors font-medium">Services</a>
          <a href="/locations" class="text-gray-700 hover:text-blue-600 hover:bg-gray-50 px-3 py-2 rounded-md transition-colors font-medium">Locations</a>
          <a href="/about" class="text-gray-700 hover:text-blue-600 hover:bg-gray-50 px-3 py-2 rounded-md transition-colors font-medium">About</a>
          <a href="/contact" class="text-gray-700 hover:text-blue-600 hover:bg-gray-50 px-3 py-2 rounded-md transition-colors font-medium">Contact</a>
        </div>
      </div>
    </nav>
  </header>

  <!-- Main Content -->
  <main class="flex-grow">
    <slot />
  </main>

  <!-- Footer -->
  <footer class="bg-gray-900 text-white mt-20">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
      <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
        <!-- Company Info -->
        <div>
          <h3 class="text-xl font-bold mb-4">PCM <span class="text-blue-400">Homes</span></h3>
          <p class="text-gray-400">Custom Home Builder & Renovation Contractor</p>
          <p class="text-gray-400 mt-2">9 Years of Excellence in Construction</p>
        </div>

        <!-- Quick Links -->
        <div>
          <h4 class="text-lg font-semibold mb-4">Quick Links</h4>
          <ul class="space-y-2">
            <li><a href="/services" class="text-gray-400 hover:text-white transition-colors">Our Services</a></li>
            <li><a href="/locations" class="text-gray-400 hover:text-white transition-colors">Service Areas</a></li>
            <li><a href="/about" class="text-gray-400 hover:text-white transition-colors">About Us</a></li>
            <li><a href="/contact" class="text-gray-400 hover:text-white transition-colors">Get a Quote</a></li>
          </ul>
        </div>

        <!-- Contact Info -->
        <div>
          <h4 class="text-lg font-semibold mb-4">Contact Us</h4>
          <ul class="space-y-2 text-gray-400">
            <li>
              <a href="tel:9057161939" class="hover:text-white transition-colors">
                üìû (905) 716-1939
              </a>
            </li>
            <li>
              <a href="mailto:info.pcmhomes@gmail.com" class="hover:text-white transition-colors">
                ‚úâÔ∏è info.pcmhomes@gmail.com
              </a>
            </li>
            <li>‚è∞ Mon-Fri: 8:00 AM - 6:00 PM</li>
          </ul>
        </div>
      </div>

      <div class="border-t border-gray-800 mt-8 pt-8 text-center text-gray-400">
        <p>&copy; {new Date().getFullYear()} PCM Homes. All rights reserved.</p>
      </div>
    </div>
  </footer>

  <script>
    // Mobile menu toggle
    const mobileMenuButton = document.getElementById('mobile-menu-button');
    const mobileMenu = document.getElementById('mobile-menu');

    mobileMenuButton?.addEventListener('click', () => {
      mobileMenu?.classList.toggle('hidden');
    });
  </script>
</body>
</html>
